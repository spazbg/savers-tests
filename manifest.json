{
  "manifest_version": 3,
  "name": "Savers Test",
  "version": "1.1",
  "author": "Spas Genov",
  "description": "A Google Chrome extension for Savers' QAs and DEVs, enabling easy cookie management and code banking",
  "action": {
    "default_icon": "favicon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["cookies.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "cookies",
    "tabs",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "*://*.newsapis.co.uk/*",
    "*://*.thesun.co.uk/*",
    "*://*.uat-thesun.co.uk/*",
    "*://*.staging-thesun.co.uk/*",
    "*://*.ntch.co.uk/*",
    "*://localhost/*"
  ],
  "icons": {
    "16": "favicon.png",
    "48": "favicon.png",
    "128": "favicon.png"
  }
}